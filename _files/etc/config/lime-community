
config lime system
        option hostname 'CumanMesh-%M4%M5%M6'
        option domain 'cm.net'
        option keep_on_upgrade 'libremesh base-files-essential /etc/sysupgrade.conf'

config lime network
        option primary_interface eth0
        option main_ipv4_address '10.%N1.%N2.0/24'
        option main_ipv6_address 'fd43:1508:%N1%N2:%N300::/64'
        list protocols ieee80211s
        list protocols lan
        list protocols anygw
        list protocols batadv:%N1
        list protocols bmx7:18
        list resolvers 8.8.8.8
	list resolvers 8.8.4.4
	option batadv_orig_interval '2000'
	option bmx7_mtu '1500'
        option bmx7_over_batman false
        option bmx7_pref_gw none
        option anygw_mac "aa:aa:aa:%N1:%N2:aa"

config lime wifi
        option channel_2ghz '7'
        option channel_5ghz '36'
        option distance_5ghz '40'
        option htmode_5ghz 'VHT40'
        option htmode_2ghz 'HT40'
        option ap_ssid 'CumanAP'

config wifi radio0
        list modes 'ap'
        option htmode 'HT40'

config wifi radio1
        list modes 'ap'
        list modes 'ieee80211s'
        option ieee80211s_mesh_fwding '0'
        option ieee80211s_mesh_id 'cuman'
        option ieee80211s_encryption 'sae'
        option ieee80211s_key 'cumanKey'
        option htmode 'VHT40'
